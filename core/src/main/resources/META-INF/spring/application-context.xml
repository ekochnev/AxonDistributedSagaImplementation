    <axon:aggregate-command-handler id="paymentAggregateHandler"
                                    aggregate-type="ru.iklyubanov.diploma.saga.core.axon.PaymentAggregate"
                                    repository="paymentRepository" command-bus="commandBus"/>

    <axon:filesystem-event-store id="eventStore" base-dir="event"/>



